# Firebase Configuration
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_auth_domain
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_storage_bucket

# API Dons (Neon) - URL de l'API de paiement pour récupérer les dons
# L'admin web utilise cette API en lecture seule pour consulter les dons
NEXT_PUBLIC_DONATIONS_API_URL=https://payment-api-pink.vercel.app/api

# Firebase Admin SDK (pour les scripts de création d'utilisateurs)
# Téléchargez votre service account depuis Firebase Console > Paramètres > Comptes de service
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_CLIENT_EMAIL=your-client-email@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# Note: Les variables Postgres ne sont PAS nécessaires ici
# L'admin web ne se connecte PAS directement à la base de données
# Il passe par l'API REST (payment-api) qui gère la connexion Postgres
