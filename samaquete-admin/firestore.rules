rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Règles pour la collection users
    match /users/{userId} {
      // L'utilisateur peut lire et modifier son propre profil
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // Les super admins peuvent lire tous les profils
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
      
      // Les super admins peuvent modifier tous les profils
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
      
      // Les admins diocèse peuvent lire les profils de leur diocèse
      allow read: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'diocese_admin' &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dioceseId == resource.data.dioceseId;
    }
    
    // Règles pour la collection dioceses
    match /dioceses/{dioceseId} {
      // Lecture publique (pour l'affichage)
      allow read: if request.auth != null;
      
      // Seuls les super admins peuvent modifier
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }
    
    // Règles pour la collection parishes
    match /parishes/{parishId} {
      // Lecture publique (pour l'affichage)
      allow read: if request.auth != null;
      
      // Les super admins peuvent tout modifier
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
      
      // Les admins diocèse peuvent modifier les paroisses de leur diocèse
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'diocese_admin' &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.dioceseId == resource.data.dioceseId;
    }
    
    // Règles pour la collection admin_users
    match /admin_users/{userId} {
      // Lecture pour tous les admins authentifiés
      allow read: if request.auth != null;
      
      // Écriture pour les super admins
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'super_admin';
    }
    
    // Règles pour la collection admin_news
    match /admin_news/{newsId} {
      // Lecture pour tous les admins authentifiés
      allow read: if request.auth != null;
      
      // Écriture pour les super admins et admins diocèse
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'diocese_admin'];
    }
    
    // Règles pour la collection admin_parishes
    match /admin_parishes/{parishId} {
      // Lecture pour tous les admins authentifiés
      allow read: if request.auth != null;
      
      // Écriture pour les super admins et admins diocèse
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'diocese_admin'];
    }
    
    // Règles pour la collection admin_donations
    match /admin_donations/{donationId} {
      // Lecture pour tous les admins authentifiés
      allow read: if request.auth != null;
      
      // Écriture pour les super admins et admins diocèse
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'diocese_admin'];
    }
    
    // Règles pour la collection admin_liturgy
    match /admin_liturgy/{liturgyId} {
      // Lecture pour tous les admins authentifiés
      allow read: if request.auth != null;
      
      // Écriture pour les super admins et admins diocèse
      allow write: if request.auth != null && 
        exists(/databases/$(database)/documents/users/$(request.auth.uid)) &&
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['super_admin', 'diocese_admin'];
    }
    
    // Règles pour les autres collections (à adapter selon vos besoins)
    match /{document=**} {
      // Par défaut, refuser l'accès
      allow read, write: if false;
    }
  }
}