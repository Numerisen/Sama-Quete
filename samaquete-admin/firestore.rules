rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function getUserRole() {
      return request.auth.token.role;
    }
    
    function getUserDioceseId() {
      return request.auth.token.dioceseId != null ? request.auth.token.dioceseId : '';
    }
    
    function getUserParishId() {
      return request.auth.token.parishId != null ? request.auth.token.parishId : '';
    }
    
    function getUserChurchId() {
      return request.auth.token.churchId != null ? request.auth.token.churchId : '';
    }
    
    function isSuperAdmin() {
      return getUserRole() == 'super_admin';
    }
    
    function isArchdioceseAdmin() {
      return getUserRole() == 'archdiocese_admin';
    }
    
    function isDioceseAdmin() {
      return getUserRole() == 'diocese_admin' && 
             resource.data.dioceseId == getUserDioceseId();
    }
    
    function isParishAdmin() {
      return getUserRole() == 'parish_admin' && 
             resource.data.parishId == getUserParishId();
    }
    
    function isChurchAdmin() {
      return getUserRole() == 'church_admin' && 
             resource.data.churchId == getUserChurchId();
    }
    
    // Fonctions pour la création (utilisent request.resource au lieu de resource)
    function canCreateAsDioceseAdmin() {
      return getUserRole() == 'diocese_admin' && 
             request.resource.data.dioceseId == getUserDioceseId();
    }
    
    function canCreateAsParishAdmin() {
      return getUserRole() == 'parish_admin' && 
             request.resource.data.parishId == getUserParishId() &&
             request.resource.data.dioceseId == getUserDioceseId() &&
             getUserParishId() != '' &&
             getUserDioceseId() != '';
    }
    
    function canCreateAsChurchAdmin() {
      return getUserRole() == 'church_admin' && 
             request.resource.data.parishId != null &&
             request.resource.data.dioceseId != null &&
             request.resource.data.dioceseId == getUserDioceseId() &&
             request.resource.data.churchId != null &&
             request.resource.data.churchId == getUserChurchId() &&
             getUserDioceseId() != '' &&
             getUserChurchId() != '';
    }
    
    // Mobile read rules (public, published only)
    function isPublished() {
      return resource.data.status == 'published';
    }
    
    function matchesParishId(parishId) {
      return resource.data.parishId == parishId;
    }
    
    // Dioceses - Lecture publique (pas de status requis pour les collections structurelles)
    match /dioceses/{dioceseId} {
      allow read: if true; // Lecture publique pour l'app mobile
      allow write: if isAuthenticated() && isSuperAdmin();
    }
    
    // Parishes - Lecture publique (pas de status requis pour les collections structurelles)
    match /parishes/{parishId} {
      allow read: if true; // Lecture publique pour l'app mobile
      // Création : super admin, archdiocese admin, ou diocese admin (dans son diocèse)
      allow create: if isAuthenticated() && (
        isSuperAdmin() || 
        isArchdioceseAdmin() ||
        (getUserRole() == 'diocese_admin' && 
         request.resource.data.dioceseId != null &&
         request.resource.data.dioceseId == getUserDioceseId() &&
         getUserDioceseId() != '')
      );
      // Modification : super admin, archdiocese admin, ou diocese admin (dans son diocèse)
      allow update: if isAuthenticated() && (
        isSuperAdmin() || 
        isArchdioceseAdmin() ||
        (getUserRole() == 'diocese_admin' && resource.data.dioceseId == getUserDioceseId())
      );
      // Suppression : super admin, archdiocese admin, ou diocese admin (dans son diocèse)
      allow delete: if isAuthenticated() && (
        isSuperAdmin() || 
        isArchdioceseAdmin() ||
        (getUserRole() == 'diocese_admin' && resource.data.dioceseId == getUserDioceseId())
      );
    }
    
    // Churches - INTERNES UNIQUEMENT (pas accessibles depuis l'app mobile)
    match /churches/{churchId} {
      allow read: if isAuthenticated(); // Seulement pour les admins authentifiés
      // Création : super admin, archdiocese admin, diocese admin (dans son diocèse), ou parish admin (dans son diocèse)
      allow create: if isAuthenticated() && (
        isSuperAdmin() || 
        isArchdioceseAdmin() ||
        (getUserRole() == 'diocese_admin' && 
         request.resource.data.dioceseId != null &&
         request.resource.data.dioceseId == getUserDioceseId() &&
         getUserDioceseId() != '') ||
        (getUserRole() == 'parish_admin' && 
         request.resource.data.dioceseId != null &&
         request.resource.data.dioceseId == getUserDioceseId() &&
         getUserDioceseId() != '')
      );
      // Modification : super admin, archdiocese admin, diocese admin (dans son diocèse), ou parish admin (dans sa paroisse ou son diocèse)
      allow update: if isAuthenticated() && (
        isSuperAdmin() || 
        isArchdioceseAdmin() ||
        (getUserRole() == 'diocese_admin' && resource.data.dioceseId == getUserDioceseId()) ||
        (getUserRole() == 'parish_admin' && (
          (resource.data.parishId != null && resource.data.parishId == getUserParishId() && getUserParishId() != '') ||
          (resource.data.dioceseId != null && resource.data.dioceseId == getUserDioceseId() && getUserDioceseId() != '')
        ))
      );
      // Suppression : super admin, archdiocese admin, diocese admin (dans son diocèse), ou parish admin (dans sa paroisse ou son diocèse)
      allow delete: if isAuthenticated() && (
        isSuperAdmin() || 
        isArchdioceseAdmin() ||
        (getUserRole() == 'diocese_admin' && resource.data.dioceseId == getUserDioceseId()) ||
        (getUserRole() == 'parish_admin' && (
          (resource.data.parishId != null && resource.data.parishId == getUserParishId() && getUserParishId() != '') ||
          (resource.data.dioceseId != null && resource.data.dioceseId == getUserDioceseId() && getUserDioceseId() != '')
        ))
      );
    }
    
    // News - Lecture publique pour les documents publiés (support status et published)
    match /news/{newsId} {
      allow read: if isAuthenticated() || 
                   (request.auth == null && (
                     resource.data.status == 'published' || 
                     resource.data.published == true
                   ));
      allow create: if isAuthenticated() && getUserRole() != 'church_admin';
      allow update: if isAuthenticated() && (
        isSuperAdmin() || 
        isArchdioceseAdmin() || 
        isDioceseAdmin() || 
        isParishAdmin()
      );
      allow delete: if isAuthenticated() && (
        isSuperAdmin() || 
        isDioceseAdmin() || 
        isParishAdmin()
      );
    }
    
    // Parish News - Lecture publique pour l'app mobile (utilise published)
    // Supporte les actualités de paroisse, diocèse et archidiocèse
    match /parish_news/{newsId} {
      allow read: if isAuthenticated() || 
                   (request.auth == null && resource.data.published == true);
      
      // Création selon le scope
      allow create: if isAuthenticated() && (
        // Super admin peut créer tout
        isSuperAdmin() ||
        // Archidiocèse peut créer des actualités archidiocésaines (DAKAR)
        (isArchdioceseAdmin() && request.resource.data.scope == 'archdiocese' && request.resource.data.archdioceseId == 'DAKAR') ||
        // Diocèse peut créer des actualités diocésaines (son diocèse) ou paroissiales (ses paroisses)
        (getUserRole() == 'diocese_admin' && (
          (request.resource.data.scope == 'diocese' && request.resource.data.dioceseId == getUserDioceseId()) ||
          (request.resource.data.scope == 'parish' && request.resource.data.dioceseId == getUserDioceseId())
        )) ||
        // Paroisse peut créer des actualités paroissiales (sa paroisse)
        (getUserRole() == 'parish_admin' && 
         request.resource.data.scope == 'parish' && 
         request.resource.data.parishId == getUserParishId())
      );
      
      // Modification selon le scope
      allow update: if isAuthenticated() && (
        isSuperAdmin() ||
        // Archidiocèse peut modifier ses actualités archidiocésaines
        (isArchdioceseAdmin() && resource.data.scope == 'archdiocese' && resource.data.archdioceseId == 'DAKAR') ||
        // Diocèse peut modifier ses actualités diocésaines et celles de ses paroisses
        (getUserRole() == 'diocese_admin' && (
          (resource.data.scope == 'diocese' && resource.data.dioceseId == getUserDioceseId()) ||
          (resource.data.scope == 'parish' && resource.data.dioceseId == getUserDioceseId())
        )) ||
        // Paroisse peut modifier ses actualités paroissiales
        (getUserRole() == 'parish_admin' && 
         resource.data.scope == 'parish' && 
         resource.data.parishId == getUserParishId())
      );
      
      // Suppression selon le scope
      allow delete: if isAuthenticated() && (
        isSuperAdmin() ||
        (isArchdioceseAdmin() && resource.data.scope == 'archdiocese' && resource.data.archdioceseId == 'DAKAR') ||
        (getUserRole() == 'diocese_admin' && (
          (resource.data.scope == 'diocese' && resource.data.dioceseId == getUserDioceseId()) ||
          (resource.data.scope == 'parish' && resource.data.dioceseId == getUserDioceseId())
        )) ||
        (getUserRole() == 'parish_admin' && 
         resource.data.scope == 'parish' && 
         resource.data.parishId == getUserParishId())
      );
    }
    
    // Donation Types - Lecture publique pour les types actifs et validés
    match /donation_types/{donationTypeId} {
      allow read: if true; // Lecture publique (l'app mobile filtre par validatedByParish et isActive)
      
      // Création : super_admin, parish_admin (avec validatedByParish=true), church_admin (avec validatedByParish=false)
      allow create: if isAuthenticated() && (
        isSuperAdmin() ||
        // Parish admin peut créer si parishId correspond (avec ou sans vérification dioceseId)
        (getUserRole() == 'parish_admin' && 
         request.resource.data.parishId != null &&
         request.resource.data.parishId == getUserParishId() &&
         getUserParishId() != '' &&
         request.resource.data.validatedByParish == true) ||
        // Church admin peut créer avec validatedByParish=false
        (canCreateAsChurchAdmin() &&
         request.resource.data.validatedByParish == false)
      );
      
      // Modification : super_admin, parish_admin (pour sa paroisse - peut valider), church_admin (pour ses créations)
      allow update: if isAuthenticated() && (
        isSuperAdmin() ||
        (getUserRole() == 'parish_admin' && 
         resource.data.parishId != null &&
         resource.data.parishId == getUserParishId() &&
         getUserParishId() != '' &&
         resource.data.dioceseId != null &&
         resource.data.dioceseId == getUserDioceseId() &&
         getUserDioceseId() != '' &&
         // Permettre de changer validatedByParish de false à true (validation)
         (request.resource.data.validatedByParish == resource.data.validatedByParish ||
          (resource.data.validatedByParish == false && request.resource.data.validatedByParish == true))) ||
        (getUserRole() == 'church_admin' && 
         resource.data.churchId != null &&
         resource.data.churchId == getUserChurchId() &&
         getUserChurchId() != '' &&
         resource.data.createdByRole == 'church_admin' &&
         // church_admin ne peut pas changer validatedByParish
         request.resource.data.validatedByParish == resource.data.validatedByParish)
      );
      
      // Suppression : super_admin, parish_admin (pour sa paroisse), church_admin (pour ses créations)
      allow delete: if isAuthenticated() && (
        isSuperAdmin() ||
        (getUserRole() == 'parish_admin' && 
         resource.data.parishId != null &&
         resource.data.parishId == getUserParishId() &&
         getUserParishId() != '') ||
        (getUserRole() == 'church_admin' && 
         resource.data.churchId != null &&
         resource.data.churchId == getUserChurchId() &&
         getUserChurchId() != '' &&
         resource.data.createdByRole == 'church_admin')
      );
    }
    
    // Notifications - Lecture publique pour les documents publiés
    match /notifications/{notificationId} {
      allow read: if isAuthenticated() || (request.auth == null && resource.data.status == 'published');
      allow write: if isAuthenticated() && isParishAdmin();
    }
    
    // Activities - Lecture publique pour les documents publiés
    match /activities/{activityId} {
      allow read: if isAuthenticated() || (request.auth == null && resource.data.status == 'published');
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        isSuperAdmin() || 
        isDioceseAdmin() || 
        isParishAdmin()
      );
    }
    
    // Prayers - Lecture publique pour les documents publiés
    match /prayers/{prayerId} {
      allow read: if isAuthenticated() || (request.auth == null && resource.data.status == 'published');
      allow create: if isAuthenticated();
      allow update: if isAuthenticated() && (
        isSuperAdmin() || 
        isDioceseAdmin() || 
        isParishAdmin()
      );
    }
    
    // Parish Prayer Times - Lecture publique pour l'app mobile
    match /parish_prayer_times/{prayerTimeId} {
      allow read: if true; // Lecture publique pour l'app mobile (mais filtrée par validatedByParish dans l'app)
      
      // Création : super_admin, archdiocese_admin, diocese_admin, parish_admin et church_admin
      allow create: if isAuthenticated() && (
        // Super admin et archdiocese admin : peuvent créer pour n'importe quelle paroisse
        isSuperAdmin() ||
        isArchdioceseAdmin() ||
        // Diocese admin : peut créer pour les paroisses de son diocèse (vérification simplifiée)
        (getUserRole() == 'diocese_admin' && 
         request.resource.data.parishId != null &&
         request.resource.data.parishId != '') ||
        // Parish admin : peut créer pour sa paroisse (auto-validé)
        (getUserRole() == 'parish_admin' && 
         request.resource.data.parishId != null &&
         request.resource.data.parishId != '' &&
         request.resource.data.parishId == getUserParishId() &&
         getUserParishId() != '') ||
        // Church admin : peut créer pour une paroisse de son diocèse (nécessite validation)
        (getUserRole() == 'church_admin' && 
         request.resource.data.parishId != null &&
         request.resource.data.parishId != '' &&
         request.resource.data.churchId != null &&
         request.resource.data.churchId != '' &&
         request.resource.data.churchId == getUserChurchId() &&
         getUserChurchId() != '')
      );
      
      // Modification : super_admin, archdiocese_admin, diocese_admin, parish_admin (pour sa paroisse) ou church_admin (pour ses créations)
      allow update: if isAuthenticated() && (
        isSuperAdmin() ||
        isArchdioceseAdmin() ||
        (getUserRole() == 'diocese_admin' && 
         resource.data.parishId != null &&
         resource.data.parishId != '') ||
        (getUserRole() == 'parish_admin' && 
         resource.data.parishId != null &&
         resource.data.parishId != '' &&
         resource.data.parishId == getUserParishId() &&
         getUserParishId() != '') ||
        (getUserRole() == 'church_admin' && 
         resource.data.churchId != null &&
         resource.data.churchId != '' &&
         resource.data.churchId == getUserChurchId() &&
         getUserChurchId() != '')
      );
      
      // Suppression : super_admin, archdiocese_admin, diocese_admin, parish_admin (pour sa paroisse) ou church_admin (pour ses créations)
      allow delete: if isAuthenticated() && (
        isSuperAdmin() ||
        isArchdioceseAdmin() ||
        (getUserRole() == 'diocese_admin' && 
         resource.data.parishId != null) ||
        (getUserRole() == 'parish_admin' && 
         resource.data.parishId != null &&
         resource.data.parishId == getUserParishId() &&
         getUserParishId() != '') ||
        (getUserRole() == 'church_admin' && 
         resource.data.churchId != null &&
         resource.data.churchId == getUserChurchId() &&
         getUserChurchId() != '')
      );
    }
    
    // Parish Notifications - Lecture publique pour l'app mobile
    match /parish_notifications/{notificationId} {
      allow read: if true; // Lecture publique pour l'app mobile
      allow write: if isAuthenticated() && (isSuperAdmin() || isParishAdmin());
    }
    
    // Parish Visit Totals - Lecture/écriture publique pour les statistiques
    match /parish_visit_totals/{parishId} {
      allow read: if true; // Lecture publique pour l'app mobile
      allow write: if true; // Écriture publique pour permettre l'incrémentation des visites
    }
    
    // Parish Donation Types - Lecture publique pour l'app mobile
    match /parish_donation_types/{donationTypeId} {
      allow read: if true; // Lecture publique pour l'app mobile
      // Création : super_admin, parish_admin, church_admin (pour synchronisation depuis donation_types)
      allow create: if isAuthenticated() && (
        isSuperAdmin() || 
        (getUserRole() == 'parish_admin' && 
         request.resource.data.parishId != null &&
         request.resource.data.parishId == getUserParishId() &&
         getUserParishId() != '') ||
        (getUserRole() == 'church_admin' && 
         request.resource.data.parishId != null &&
         getUserDioceseId() != '')
      );
      // Modification : super_admin, parish_admin, church_admin
      allow update: if isAuthenticated() && (
        isSuperAdmin() || 
        (getUserRole() == 'parish_admin' && 
         resource.data.parishId != null &&
         resource.data.parishId == getUserParishId() &&
         getUserParishId() != '') ||
        (getUserRole() == 'church_admin' && 
         getUserDioceseId() != '')
      );
      // Suppression : super_admin, parish_admin
      allow delete: if isAuthenticated() && (
        isSuperAdmin() || 
        (getUserRole() == 'parish_admin' && 
         resource.data.parishId != null &&
         resource.data.parishId == getUserParishId() &&
         getUserParishId() != '')
      );
    }
    
    // Users (Fidèles de l'app mobile) - Lecture pour super_admin et archdiocese_admin
    match /users/{userId} {
      // Lecture : super_admin, archdiocese_admin, et l'utilisateur lui-même
      allow read: if isAuthenticated() && (
        isSuperAdmin() ||
        isArchdioceseAdmin() ||
        request.auth.uid == userId
      );
      // Création : utilisateurs de l'app mobile (inscription publique)
      allow create: if request.resource.data.uid == request.auth.uid &&
                    request.resource.data.uid == userId;
      // Modification : l'utilisateur lui-même ou super_admin
      allow update: if isAuthenticated() && (
        isSuperAdmin() ||
        (request.auth.uid == userId && 
         request.resource.data.uid == request.auth.uid)
      );
      // Suppression : super_admin uniquement
      allow delete: if isSuperAdmin();
    }
    
    // Liturgy - Lecture/écriture publique pour l'app mobile (synchronisation)
    match /liturgy/{liturgyId} {
      allow read: if true; // Lecture publique pour l'app mobile
      allow write: if true; // Écriture publique pour permettre la synchronisation
    }
  }
}
