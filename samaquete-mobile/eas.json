{
  "cli": {
    "version": ">= 5.2.0",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "ios": {
        "simulator": true
      },
      "android": {
        "buildType": "apk"
      }
    },
    "preview": {
      "distribution": "internal",
      "ios": {
        "simulator": false
      },
      "android": {
        "buildType": "apk"
      },
      "env": {
        "EXPO_PUBLIC_PAYMENT_API_URL": "https://payment-api-pink.vercel.app",
        "EXPO_PUBLIC_ASSISTANT_API_URL": "https://sama-quete.onrender.com"
      }
    },
    "production": {
      "distribution": "store",
      "ios": {
        "simulator": false
      },
      "android": { 
        "buildType": "app-bundle"
      },
      "env": {
        "EXPO_PUBLIC_PAYMENT_API_URL": "https://payment-api-pink.vercel.app",
        "EXPO_PUBLIC_ASSISTANT_API_URL": "https://sama-quete.onrender.com"
      }
    }
  },
  "submit": {
    "production": {}
  }
}

