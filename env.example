# Configuration Firebase
# Copiez ce fichier vers .env et remplissez avec vos vraies valeurs

# Firebase Configuration
FIREBASE_API_KEY=your_firebase_api_key
FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
FIREBASE_PROJECT_ID=your_project_id
FIREBASE_STORAGE_BUCKET=your_project.appspot.com
FIREBASE_MESSAGING_SENDER_ID=your_sender_id
FIREBASE_APP_ID=your_app_id

# Configuration de l'application
APP_NAME=SamaQuête
APP_VERSION=1.0.0
APP_ENVIRONMENT=development

# Configuration de l'API
API_BASE_URL=https://api.samaquete.sn
API_TIMEOUT=30000

# Configuration de l'authentification
AUTH_TOKEN_EXPIRY=3600
AUTH_REFRESH_TOKEN_EXPIRY=86400

# Configuration des notifications
PUSH_NOTIFICATION_KEY=your_push_notification_key
PUSH_NOTIFICATION_SECRET=your_push_notification_secret

# Configuration de l'email
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Configuration de la base de données
DATABASE_URL=your_database_url
DATABASE_POOL_SIZE=10

# Configuration de la sécurité
JWT_SECRET=your_jwt_secret_key
ENCRYPTION_KEY=your_encryption_key

# Configuration du cache
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Configuration des logs
LOG_LEVEL=info
LOG_FILE=logs/app.log

# Configuration du monitoring
SENTRY_DSN=your_sentry_dsn
ANALYTICS_ID=your_analytics_id
