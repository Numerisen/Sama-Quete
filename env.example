# ============================================
# Configuration Sama-Quete
# ============================================
# Copiez ce fichier vers .env et remplissez les valeurs

# ============================================
# Firebase Configuration
# ============================================
# Configuration Firebase pour l'application admin
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK (pour payment-api)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"

# ============================================
# PayDunya Configuration
# ============================================
# Configuration PayDunya pour les paiements
PAYDUNYA_MODE=sandbox
# PAYDUNYA_MODE=live  # Pour la production
PAYDUNYA_MASTER_KEY=your_paydunya_master_key
PAYDUNYA_PRIVATE_KEY=your_paydunya_private_key
PAYDUNYA_TOKEN=your_paydunya_token
PAYDUNYA_MERCHANT_NAME=SAMA-QUETE

# ============================================
# Database Configuration
# ============================================
# URL de connexion PostgreSQL pour payment-api
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require
POSTGRES_URL=postgresql://user:password@host:port/database?sslmode=require

# ============================================
# Application URLs
# ============================================
# URL de base pour l'API de paiement
BASE_URL=http://localhost:3001
NEXT_PUBLIC_BASE_URL=http://localhost:3001
NEXT_PUBLIC_PAYMENT_API_URL=http://localhost:3001

# Pour la production, utilisez vos URLs réelles:
# BASE_URL=https://payment-api.yourdomain.com
# NEXT_PUBLIC_BASE_URL=https://payment-api.yourdomain.com
# NEXT_PUBLIC_PAYMENT_API_URL=https://payment-api.yourdomain.com

# ============================================
# CORS Configuration
# ============================================
# Origines autorisées pour les requêtes CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,https://yourdomain.com

# ============================================
# Ports (pour Docker)
# ============================================
ADMIN_PORT=3000
PAYMENT_API_PORT=3001

# ============================================
# Environment
# ============================================
NODE_ENV=development
# NODE_ENV=production  # Pour la production

